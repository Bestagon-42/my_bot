<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="robot">

    <xacro:include filename="inertial_macros.xacro"/>

    <!-- COLORS -->

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.02 0 -0.015" rpy="0 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.05 0 0.015"/>
            <geometry>
                <box size="0.1 0.1 0.03"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.05 0 0.015"/>
            <geometry>
                <box size="0.1 0.1 0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.2" x="0.1" y="0.1" z="0.03">
            <origin xyz="0.05 0 0.015" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.05 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <origin xyz="0 0 0.005"/>
            <geometry>
                <cylinder radius="0.02" length="0.01"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.005"/>
            <geometry>
                <cylinder radius="0.02" length="0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.01" radius="0.02">
            <origin xyz="0 0 0.005" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- RIGHT WHEEL LINK -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.05 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <origin xyz="0 0 0.005"/>
            <geometry>
                <cylinder radius="0.02" length="0.01"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.005"/>
            <geometry>
                <cylinder radius="0.02" length="0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.01" radius="0.02">
            <origin xyz="0 0 0.005" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- CASTOR WHEEL LINK -->

    <joint name="castor_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="castor_wheel"/>
        <origin xyz="0.07 0 -0.01"/>
    </joint>

    <link name="castor_wheel">
        <visual>
            <geometry>
                <sphere radius="0.01"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.01" radius="0.01">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>


</robot>